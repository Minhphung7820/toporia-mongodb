{
    "name": "toporia/mongodb",
    "description": "MongoDB ODM for Toporia Framework - Document-oriented database support with embedded documents, references, and aggregation pipelines",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Phungtruong7820",
            "email": "minhphung485@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "toporia/framework": "^1.0",
        "mongodb/mongodb": "^1.17"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Toporia\\MongoDB\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Toporia\\MongoDB\\Tests\\": "tests/"
        }
    },
    "extra": {
        "toporia": {
            "providers": [
                "Toporia\\MongoDB\\MongoDBServiceProvider"
            ],
            "config": {
                "mongodb": "config/mongodb.php"
            }
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
